<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentMahasiswa"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/judul_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIODATA MAHASISWA"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <ImageView
            android:id="@+id/foto_bio"
            android:layout_below="@id/judul_bio"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/foto_bio"
            android:layout_marginTop="10dp"/>
        <TableLayout
            android:layout_marginTop="20dp"
            android:id="@+id/data_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto_bio"
            android:layout_centerHorizontal="true">
            <TableRow>
                <TextView
                    android:text="Nama"
                    android:padding="5dp"/>
                <TextView
                    android:text=":"
                    android:padding="5dp"/>
                <TextView
                    android:text="Khansa Mazaya As-aushaf Almay Damars"
                    android:padding="5dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="NIM"
                    android:padding="5dp"/>
                <TextView
                    android:text=":"
                    android:padding="5dp"/>
                <TextView
                    android:text="2257201362"
                    android:padding="5dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Prodi"
                    android:padding="5dp"/>
                <TextView
                    android:text=":"
                    android:padding="5dp"/>
                <TextView
                    android:text="Sistem Informasi"
                    android:padding="5dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Motto Hidup"
                    android:padding="5dp"/>
                <TextView
                    android:text=":"
                    android:padding="5dp"/>
                <TextView
                    android:text="Terus belajar, terus berkembang"
                    android:padding="5dp"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</FrameLayout>